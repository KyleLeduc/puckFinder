<% layout ('layouts/boilerplate') %>
<div id="cluster-map"></div>
<h1>All Rinks</h1>

<% for (let rink of rinks) { %> 
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-5 col-lg-4 d-flex justify-content-center">
                <img src="<%= rink.images.length === 0 ? 'https://res.cloudinary.com/dmmbzjpzz/image/upload/w_500/v1612559445/PuckFinder/noImagesAvailable_cqa8ny.png' : rink.images[0].indexThumbnail %>" alt="" class="img-fluid">
            </div>
            <div class="col-md-7 col-lg-8">
                <div class="card-body">
                    <h5 class="card-title"><%= rink.title %></h5>
                    <p class="card-text mb-1 mb-lg-2"><%= rink.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= rink.location %></small>
                    </p>
                    <p class="card-text">Player Count: <%= rink.playerCount %></p>
                    <a href="/rinks/<%= rink._id %>" class="btn btn-primary">View <%= rink.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const rinks = {features: <%- JSON.stringify(rinks) %>};
</script>

<script src="/javascripts/clusterMap.js"></script>